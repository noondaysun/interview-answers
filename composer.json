{
    "name": "noondaysun/interview-answers",
    "description": "Some answers to interviews questions",
    "autoload": {
        "psr-4": { "App": "app/src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "app/tests/" }
    }
    "require": {
        "symfony/console" : "^4.3"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.11"
    },
    "scripts": {
        "lint": "parallel-lint --colors --blame --exclude vendor app tests",
        "stan": "phpstan -l 4 app tests",
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "test": "Run all tests!"
    }
}